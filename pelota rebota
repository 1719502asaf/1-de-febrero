var lim1;
lim1=0;
var izquierda;
izquierda=0;


function setup() {
  createCanvas(400, 400);


}

function draw() {
  background(255,0,0);
  if (lim1 == 0){izquierda=0}
  if(lim1 < 400 & izquierda == 0)
  {
  ellipse(lim1,200,60,60);
  lim1=lim1+1;
  }
  else
  {
  izquierda = 1;
  ellipse(lim1,200,60,60);
  lim1=lim1-1;
  }
}
